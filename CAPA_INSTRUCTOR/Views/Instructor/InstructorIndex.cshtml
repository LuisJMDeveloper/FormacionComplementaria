
@{
    ViewBag.Title = "InstructorIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bienvenido Instructor</h2>


<div class="accordion border-success shadow-success" id="accordionFlushExample">

    <div class="accordion-item">
        <h2 class="accordion-header _acordionTitle" id="flush-headingOne">
            <button class="accordion-button collapsed" style="font-size:20px;" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                Formulario Creación Solicitud
            </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">

            @*Botones Acciones Formulario Crear Solicitud*@
            <div class="card m-2 ">
                <section class="card-header d-flex justify-content-between gap-5 flex-wrap">
                    <h5>Formulario de solicitud</h5>
                    <div class="d-flex justify-content-end gap-3">
                        <button form="formSolicitud" class="btn btn-success btn-sm">
                            <i class="bi bi-file-earmark-check"></i> Guardar
                        </button>
                        <button form="formSolicitud" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Cancelar
                        </button>
                        <button form="formSolicitud" class="btn btn-primary btn-sm">
                            <i class="bi bi-send-check"></i> Enviar
                        </button>
                    </div>
                </section>

                <section class="card-body">
                    <div class="container">
                        <form id="formSolicitud" class="container-fluid">
                            
                                <div class="row mt-2">
                                    @*Informacion de SOLICITUD*@
                                    <div class="col-sm mb-3">
                                        <div class="card col">
                                            <div class="card-header">
                                                <h6 class="form-label">Infomación Solicitud</h6>
                                            </div>
                                            <div class="card-body d-flex justify-content-start gap-2 flex-wrap">

                                                <div class="form-group">
                                                    <label for="txtnombre">Nombre:</label>
                                                    <input type="text" class="form-control border-success" id="txtnombre" name="txtnombre">
                                                </div>

                                                <div class="form-group">
                                                    <label for="tipo">Tipo:</label>
                                                    <select class="form-select border-success" aria-label="Default select example" id="cmbTipoSolicitud" name="cmbTipoSolicitud">
                                                        <option value="Abierta">
                                                            Abierta
                                                        </option>

                                                        <option value="Cerrada">
                                                            Cerrada
                                                        </option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="txtente">Empresa:</label>
                                                    <input type="text" class="form-control border-success" id="txtente" name="txtente">
                                                </div>

                                            </div>
                                        </div>
                                    </div>



                                    @*Informacion Adicional*@
                                    <div class="col-sm mb-3">
                                        <div class="card">
                                            <div class="card-header">
                                                <h6 class="form-label">Infomación Programa De formación</h6>
                                            </div>
                                            <div class="card-body d-flex justify-content-start gap-2 flex-wrap">

                                                <div class="form-group">
                                                    <label for="txtnombre">Código:</label>
                                                    <input type="number" class="form-control border-success" id="txtPF_id" name="txtCodigoPF">
                                                </div>

                                                <div class="form-group">
                                                    <label for="tipo">Tipo:</label>
                                                    <select class="form-select border-success" aria-label="Default select example" id="cmbTipoSolicitud" name="cmbTipoSolicitud">
                                                        <option value="Abierta">
                                                            Abierta
                                                        </option>

                                                        <option value="Cerrada">
                                                            Cerrada
                                                        </option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="txtente">Empresa:</label>
                                                    <input type="text" class="form-control border-success" id="txtente" name="txtente">
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>



                                <div class="row mb-3">
                                    @*Informacion de CURSO*@
                                    <div class="col">
                                        <div class="card">
                                            <div class="card-header">
                                                <h6>Infomación Curso</h6>
                                            </div>
                                            <div class="card-body d-flex justify-content-start gap-2 flex-wrap">
                                                <div class="form-group">
                                                    <label for="codigo">Código:</label>
                                                    <input type="text" class="form-control border-success" id="codigo" name="codigo">
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtNombreCurso">Nombre del curso:</label>
                                                    <input type="number" class="form-control border-success" id="txtNombreCurso" name="txtNombreCurso">
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtCupoMax">Cupo Máximo:</label>
                                                    <input type="number" class="form-control _txtNumber border-success" id="txtCupoMax" name="txtCupoMax">
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtDuracion">Duración:</label>
                                                    <input type="text" class="form-control _txtNumber border-success" id="txtDuracion" name="txtDuracion">
                                                </div>
                                                <div class="form-group">
                                                    <label for="fecha_inicio">Fecha de inicio:</label>
                                                    <input type="date" class="form-control border-success" id="fecha_inicio" name="fecha_inicio">
                                                </div>
                                                <div class="form-group">
                                                    <label for="fecha_fin">Fecha de fin:</label>
                                                    <input type="date" class="form-control border-success" id="fecha_fin" name="fecha_fin">
                                                </div>
                                                <div class="form-group">
                                                    <label for="observacion">Observación:</label>
                                                    <textarea class="form-control border-success" id="observacion" name="observacion"></textarea>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            
                        </form>
                    </div>
                </section>

                <section class="card-footer d-flex justify-content-between gap-2 flex-wrap">
                    <h6>Formulario de solicitud</h6>
                    <div class="d-flex justify-content-end gap-3">
                        <button form="formSolicitud" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-file-earmark-check"></i> Guardar
                        </button>
                        <button form="formSolicitud" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i> Cancelar
                        </button>
                        <button form="formSolicitud" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-send-check"></i> Enviar
                        </button>
                    </div>
                </section>


            </div>
        </div>
    </div>
</div>

<hr />

<div class="card mt-3">

    <section class="card-header d-flex justify-content-between gap-2 flex-wrap">
        <h5>Lista De Solicitudes</h5>

    </section>
    <section class="card-body">

        <table id="tabla" class="table display">
            <thead>
                <tr>
                    <th>Solicitud</th>
                    <th>Estado</th>
                    <th>Fecha</th>
                    <th>Tipo</th>
                    <th>Ente</th>
                    <th>Curso</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </section>

</div>



